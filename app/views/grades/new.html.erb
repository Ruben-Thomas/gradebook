<p>New Grade</p>

<%= form_for @grade do |g|%>

  <div class="field">
    <%= g.label :grade %><br>
    <%= g.text_field :grade %>
  </div>
  <div class="field">
    <%= g.label :date %><br>
    <%= g.text_field :date %>
  </div>
  <div class="field">
    <%= g.label :student_id %><br>
    <%= g.number_field :student_id %>
  </div>
  <div class="actions">
    <%= g.submit %>
  </div>
<% end %>
