<p>New Student</p>

<%= form_for @student do |s|%>

  <div class="field">
    <%= s.label :name %><br>
    <%= s.text_field :name %>
  </div>
  <div class="field">
    <%= s.label :email %><br>
    <%= s.text_field :email %>
  </div>
  <div class="field">
    <%= s.label :password %><br>
    <%= s.password_field :password %>
  </div>
  <div class="field">
    <%= s.collection_select :teacher_id, Teacher.all, :id, :name %>
  </div>
  <div class="actions">
    <%= s.submit %>
  </div>
<% end %>
